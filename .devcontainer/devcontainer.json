{
    "name": "Jupyter Development Container",
    "dockerFile": "Dockerfile",
    "forwardPorts": [8888],
    "postCreateCommand": "uv pip install -r requirements.txt",
    "postStartCommand": "uv run jupyter notebook --ip=0.0.0.0 --port=8888 --no-browser --allow-root",
    "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "jupyter.notebookFileRoot": "${workspaceFolder}",
        "jupyter.experiments.enabled": true,
        "jupyter.alwaysScrollOnNewCell": true,
        "jupyter.enableNativeInteractiveWindow": true,
        "python.linting.enabled": true,
        "python.linting.pylintEnabled": true
    },
    "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter",
        "ms-toolsai.jupyter-keymap",
        "ms-toolsai.jupyter-renderers",
        "ms-toolsai.vscode-jupyter-cell-tags",
        "ms-toolsai.vscode-jupyter-slideshow"
    ]
}

